<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learnera.app.activities.WelcomeActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_actionbar_background_view_height"
        android:layout_gravity="top"
        android:background="@color/md_red_900" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            android:background="@color/md_red_900"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/content_hamburger"
                style="@style/ImageView.Hamburger"
                android:rotation="270"
                android:tint="@color/md_white_1000"
                app:srcCompat="@drawable/ic_menu_modern" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="44dp"
                android:gravity="center_horizontal"
                android:text="LEARNERA"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="38sp" />
        </android.support.v7.widget.Toolbar>


        <!--<TextView-->
        <!--android:id="@+id/app_name"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="@color/md_red_900"-->
        <!--android:gravity="center"-->
        <!--android:paddingTop="33dp"-->
        <!--android:text="LEARNERA"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="@color/md_white_1000"-->
        <!--android:textSize="53sp" />-->

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/login_status"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/md_red_900"
                    android:fontFamily="@font/abel_regular"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="NOT LOGGED IN"
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="16sp" />

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    card_view:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_row_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/drawable_announcement"
                                style="@style/home_icon_ll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    style="@style/home_icon_image_view"
                                    android:layout_width="fill_parent"
                                    app:srcCompat="@drawable/ic_announcements" />

                                <TextView
                                    style="@style/home_icon_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_activity_announcements" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="35dp"
                                android:background="@color/md_grey_100" />


                            <LinearLayout
                                android:id="@+id/drawable_attendance"
                                style="@style/home_icon_ll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    style="@style/home_icon_image_view"
                                    android:layout_width="fill_parent"
                                    app:srcCompat="@drawable/ic_attendance" />

                                <TextView
                                    style="@style/home_icon_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_activity_attendance" />
                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="25dp"
                            android:background="@color/md_grey_100" />

                        <LinearLayout
                            android:id="@+id/linear_row_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear_row_1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/drawable_marks"
                                style="@style/home_icon_ll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    style="@style/home_icon_image_view"
                                    android:layout_width="fill_parent"

                                    app:srcCompat="@drawable/ic_marks" />

                                <TextView
                                    style="@style/home_icon_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_activity_marks" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="35dp"
                                android:background="@color/md_grey_100" />

                            <LinearLayout
                                android:id="@+id/drawable_syllabus"
                                style="@style/home_icon_ll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    style="@style/home_icon_image_view"
                                    android:layout_width="fill_parent"
                                    app:srcCompat="@drawable/ic_syllabus" />

                                <TextView
                                    style="@style/home_icon_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_activity_syllabus" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="35dp"
                            android:background="@color/md_grey_100" />

                        <LinearLayout
                            android:id="@+id/linear_row_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear_row_2"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/drawable_seating_plan"
                                style="@style/home_icon_ll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    style="@style/home_icon_image_view"
                                    android:layout_width="fill_parent"
                                    app:srcCompat="@drawable/ic_seating_plan" />

                                <TextView
                                    style="@style/home_icon_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_activity_seating" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="35dp"
                                android:background="@color/md_grey_100" />

                            <LinearLayout
                                android:id="@+id/drawable_logout"
                                style="@style/home_icon_ll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <ImageView
                                    style="@style/home_icon_image_view"
                                    android:layout_width="fill_parent"
                                    app:srcCompat="@drawable/ic_logout" />

                                <TextView
                                    style="@style/home_icon_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/action_logout" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</FrameLayout>