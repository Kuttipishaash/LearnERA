<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_red_800</item>
        <item name="colorPrimaryDark">@color/md_red_900</item>
        <item name="colorAccent">@color/md_red_900</item>
        <item name="colorButtonNormal">@color/md_red_900</item>
        <item name="android:navigationBarColor">@color/md_red_900</item>
        <item name="android:fontFamily">@fonts/yanon</item>
        <item name="fontFamily">@font/yanon</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/md_red_800</item>
        <item name="colorPrimaryDark">@color/md_red_900</item>
        <item name="colorAccent">@color/md_red_900</item>
    </style>

    <!--<style name="AppTheme.Spinner" parent="Base.Widget.AppCompat.DropDownItem.Spinner">-->
    <!--<item name="android:padding">0dp</item>-->
    <!--</style>-->

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="attendanceTableCells">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">#eee</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="home_icon_ll">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:maxHeight">220dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="home_icon_text_view">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="home_icon_image_view">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">9dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:tint">@color/md_red_700</item>
    </style>


    <!-- Guillotine screen styles-->
    <style name="LinearLayout" />

    <style name="LinearLayout.GuillotineItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">@dimen/guillotine_x_small_margin</item>
        <item name="android:paddingBottom">@dimen/guillotine_x_small_margin</item>
    </style>

    <style name="TextView" />

    <style name="TextView.ToolbarTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.GuillotineItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/guillotine_small_margin</item>
        <item name="android:textSize">@dimen/guillotine_item_text_size</item>

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.GuillotineItem.Selected">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/md_red_800</item>
    </style>

    <style name="ImageView" />

    <style name="ImageView.ContentItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageView.Hamburger" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">
            @dimen/abc_action_bar_overflow_padding_start_material
        </item>
    </style>

    <style name="ImageView.GuillotineItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/md_white_1000</item>
        <item name="android:layout_marginLeft">@dimen/guillotine_custom_margin</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="actionBarWidgetTheme">@style/Base.ThemeOverlay.AppCompat.Dark</item>
        <item name="android:actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:background">@color/md_red_800</item>
        <item name="android:fontFamily">@font/yanon</item>
        <item name="colorAccent">@color/md_white_1000</item>
        <item name="android:tint">@color/md_white_1000</item>
        <item name="android:buttonTint">@color/md_white_1000</item>
        <item name="android:titleTextColor">@color/md_white_1000</item>
        <item name="android:editTextColor">@color/md_white_1000</item>
        <item name="android:checkMarkTint">@color/md_white_1000</item>
    </style>

    <style name="ProgressDialogCustom" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="actionBarWidgetTheme">@style/Base.ThemeOverlay.AppCompat.Dark</item>
        <item name="android:actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:background">@color/md_red_800</item>
        <item name="android:padding">3dp</item>
        <item name="android:fontFamily">@font/yanon</item>
        <item name="colorAccent">@color/md_white_1000</item>
        <item name="android:tint">@color/md_white_1000</item>
        <item name="android:buttonTint">@color/md_white_1000</item>
        <item name="android:titleTextColor">@color/md_white_1000</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>